<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="40" angle="45">
            <from x="67" y="50" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.8" g="0.8" b="0.8" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="demoJapan" file="scenes/images/redwhite.jpg" />
        <texture id="melhorCao" file="scenes/images/loki.jpg" />
        <texture id="melhorCadela" file="scenes/images/daisylinda.jpg" />
        <texture id="treeText" file="scenes/images/tree.jpg" />
        <texture id="treeBase" file="scenes/images/red.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1" g="1.0" b="1" a="1.0" />
            <specular r="1" g="1.0" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>

        <transformation id="lokiTrans">
            <translate x="2" y="2" z="2" />
            <rotate axis="y" angle="45" />
            <rotate axis="x" angle="-10" />
            <rotate axis="z" angle="10" />
        </transformation>

        <transformation id="treeBasicTransf">
            <translate x="0" y="0.5" z="0" />
            <scale x="0.2" y="0.2" z="0.2" />            
        </transformation>

        <transformation id="treePartTransf">
            <scale x="0.8" y="0.8" z="0.8" />
            <translate x="0" y="0" z="3.2" />   
        </transformation> 

        <transformation id="treeBaseTransf">
            <scale x="0.5" y="0.5" z="0.5" />
            <translate x="0" y="0" z="0" />   
        </transformation> 

    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="TreeBranches">
            <cylinder base="6" top="4" height="3" slices="20" stacks="20" />
        </primitive>
        
        <primitive id="TreeBase">
            <cylinder base="3" top="3" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="demoTorus">
            <torus inner="0.3" outer="1" slices="80" loops="80" />
        </primitive>

        <primitive id="triang">
          <triangle   x1="0" y1="0" z1="0"
                        x2="5" y2="0" z2="0"
                        x3="8" y3="4" z3="0" />
        </primitive>

        <primitive id="sp">
              <sphere radius="2" slices="30" stacks="30" />
        </primitive>

    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
             <componentref id="tree" />
            </children>
        </component>
        <component id="canito">
            <transformation>
                <transformationref id="lokiTrans" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="melhorCao" />
            <children>
                <primitiveref id="sp" />
            </children>
        </component>
        <!---__________________________________________________________-->


         <component id="coroa">
            <transformation>
                
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>


        <!---__________________________________________________________-->



        <component id="treePart">
            <transformation>
                <transformationref id="treePartTransf" />
                <transformationref id="treeBasicTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches" />
            </children>
        </component>  
        <component id="treeBase">
            <transformation>
                <transformationref id="treeBaseTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeBase" />
            <children>
                <primitiveref id="TreeBase" />
            </children>
        </component>  
        <component id="tree">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="treeText" />
            <children>
                <componentref id="treePart" />
                <componentref id="treePart" />
                <componentref id="treePart" />
                <componentref id="treePart" />
                <componentref id="treePart" />
                <componentref id="treePart" />
                <componentref id="treeBase" />
            </children>
        </component>   
        <!---__________________________________________________________-->
    </components>
</lxs>