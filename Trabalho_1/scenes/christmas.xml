<lxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="40" angle="45">
            <from x="67" y="50" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.8" g="0.8" b="0.8" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
        <texture id="demoJapan" file="scenes/images/redwhite.jpg" />
        <texture id="melhorCao" file="scenes/images/loki.jpg" />
        <texture id="melhorCadela" file="scenes/images/daisylinda.jpg" />
        <texture id="treeText" file="scenes/images/pine_leaves.jpg" />
        <texture id="treeBaseText" file="scenes/images/trunk-image.jpg" />
        <texture id="treeBallText" file="scenes/images/red.jpg" />
        <texture id="fireplaceText" file="scenes/images/fireplace.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1" g="1.0" b="1" a="1.0" />
            <specular r="1" g="1.0" b="1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="treeTopTransf">
            <translate x="0" y="0" z="0.6" />   
            <scale x="0.6" y="0.6" z="0.6" />
        </transformation> 

        <transformation id="treeLeafs2Transf">
            <translate x="0" y="0" z="2.1" />   
            <scale x="0.8" y="0.8" z="0.8" />
        </transformation> 

        <transformation id="treeLeafs3Transf">
            <translate x="0" y="0" z="3.8" />   
            <scale x="0.7" y="0.7" z="0.8" />
        </transformation>

        <transformation id="treeLeafs4Transf">
            <translate x="0" y="0" z="5.1" />   
            <scale x="0.6" y="0.6" z="0.6" />
        </transformation> 

          <transformation id="treeLeafs5Transf">
            <translate x="0" y="0" z="6.2" /> 
            <scale x="0.5" y="0.5" z="0.5" />  
        </transformation> 

        <transformation id="frameDaisyTransf">
            <translate x="4" y="4.3" z="0" /> 
            <scale x="2" y="1" z="1" />  
        </transformation> 

         <transformation id="frameLokiTransf">
            <translate x="6.2" y="4.3" z="0" /> 
            <scale x="2" y="1" z="1" />  
        </transformation>

        <transformation id="fireplaceTransf">
            <translate x="5" y="1.5" z="0" /> 
            <scale x="4" y="1.5" z="1" />  
        </transformation>  

    </transformations>

    <primitives>
        <primitive id="Rectangles">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="TreeBranches">
            <cylinder base="4" top="2" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="TreeBranches2">
            <cylinder base="4" top="1" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="TreeBranches3">
            <cylinder base="4" top="0.2" height="3" slices="20" stacks="20" />
        </primitive>

        <primitive id="TreeBase">
            <cylinder base="1" top="1" height="1" slices="20" stacks="20" />
        </primitive>
    
        <primitive id="demoTorus">
            <torus inner="0.3" outer="1" slices="80" loops="80" />
        </primitive>

        <primitive id="triang">
          <triangle   x1="0" y1="0" z1="0"
                        x2="5" y2="0" z2="0"
                        x3="8" y3="4" z3="0" />
        </primitive>

        <primitive id="TreeBall">
              <sphere radius="0.1" slices="30" stacks="30" />
        </primitive>

    </primitives>

    <components>
        <component id="demoRoot">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture"/>
            <children>
             <componentref id="tree" />
             <componentref id="DaisyFrame" />
              <componentref id="LokiFrame" />
               <componentref id="fireplace" />
            </children>
        </component>

       <component id="treeLeafs2">
            <transformation>
                <transformationref id="treeLeafs2Transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches" />
            </children>
        </component> 

        <component id="treeLeafs3">
            <transformation>
                <transformationref id="treeLeafs3Transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches2" />
            </children>
        </component> 

        <component id="treeLeafs4">
            <transformation>
                <transformationref id="treeLeafs4Transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches2" />
            </children>
        </component>   

        <component id="treeLeafs5">
            <transformation>
                <transformationref id="treeLeafs5Transf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches3" />
            </children>
        </component>    

        <component id="treeBall">
            <transformation>
                <translate x="1.4" y="1.2" z="2.3" />   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeBallText" />
            <children>
                <primitiveref id="TreeBall" />
            </children>
        </component> 

        <component id="treeBase">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="treeBaseText" />
            <children>
                <primitiveref id="TreeBase" />
            </children>
        </component>   
   
        <component id="treeTop">
            <transformation>
                <transformationref id="treeTopTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="treeText" />
            <children>
                <primitiveref id="TreeBranches" />
                <componentref id="treeLeafs2" />
                <componentref id="treeLeafs3" />
                <componentref id="treeLeafs4" />
                <componentref id="treeLeafs5" />
            </children>
        </component>   

        <component id="tree">
            <transformation>
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="treeText" />
            <children>
                <componentref id="treeTop" />
                <componentref id="treeBase"/>
                <componentref id="treeBall"/>
            </children>
        </component>   

        <component id="DaisyFrame">
            <transformation>
               <transformationref id="frameDaisyTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="melhorCadela" />
            <children>
                <primitiveref id="Rectangles" />
            </children>
        </component>  

         <component id="LokiFrame">
            <transformation>
               <transformationref id="frameLokiTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="melhorCao" />
            <children>
                <primitiveref id="Rectangles" />
            </children>
        </component> 

        <component id="fireplace">
            <transformation>
               <transformationref id="fireplaceTransf" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
                <texture id="fireplaceText" />
            <children>
                <primitiveref id="Rectangles" />
            </children>
        </component> 

    </components>
</lxs>